Package: glmmfields
Type: Package
Title: Generalized Linear Mixed Models with Robust Random Fields for
        Spatiotemporal Modeling
Version: 0.1.3
Authors@R: c(
    person(c("Sean", "C."), "Anderson", email = "sean@seananderson.ca",
      role = c("aut", "cre")),
