Package: cansim
Type: Package
Title: Accessing Statistics Canada Data Table and Vectors
Version: 0.2.3
Authors@R: c(
    person("Jens", "von Bergmann", email = "jens@mountainmath.ca", role = c("cre")),
    person("Dmitry", "Shkolnik", email = "shkolnikd@gmail.com", role = c("aut")))
